{
  "name": "Gym Lockers Management System",
  "version": "1.2.0",
  "slug": "gym_lockers",
  "description": "A management system for gym lockers with MQTT support",
  "url": "https://github.com/Solace-Software/lockers",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "services",
  "init": false,
  "stage": "stable",
  "hassio_api": true,
  "hassio_role": "default",
  "services": ["mysql:want"],
  "ports": {
    "3001/tcp": 3001,
    "1883/tcp": 1883,
    "9001/tcp": 9001
  },
  "ports_description": {
    "3001/tcp": "Web interface",
    "1883/tcp": "MQTT broker",
    "9001/tcp": "MQTT WebSocket"
  },
  "options": {
    "database": {
      "host": null,
      "port": 3306,
      "name": "gym_lockers",
      "username": null,
      "password": null
    },
    "mqtt": {
      "use_internal": true,
      "external_host": "",
      "external_port": 1883,
      "external_username": "",
      "external_password": ""
    },
    "system": {
      "auto_refresh": 30,
      "data_retention_days": 90,
      "debug_mode": false
    }
  },
  "schema": {
    "database": {
      "host": "str",
      "port": "port",
      "name": "str",
      "username": "str",
      "password": "password"
    },
    "mqtt": {
      "use_internal": "bool",
      "external_host": "str?",
      "external_port": "port?",
      "external_username": "str?",
      "external_password": "password?"
    },
    "system": {
      "auto_refresh": "int(10,300)",
      "data_retention_days": "int(1,365)",
      "debug_mode": "bool"
    }
  }
}